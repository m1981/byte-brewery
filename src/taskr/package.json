{
  "name": "Taskr",
  "version": "2.3.1",
  "description": "Interactive script runner with favorites for npm/pnpm projects",
  "main": "src/index.js",
  "bin": {
    "taskr": "./bin/taskr.js"
  },
  "scripts": {
    "proxy": "node scripts/server.js",
    "dev:host": "vite --host --force",
    "build": "NODE_ENV=production TS_NODE_BASEURL=./ pnpm build:vite",
    "build:vite": "NODE_OPTIONS='--max_old_space_size=2192' vite build",
    "dead": "pnpm build && node scripts/analyze-maps.js",
    "sentry:upload": "node scripts/upload-to-sentry.js",
    "test": "NODE_ENV=test vitest run"
  },
  "type": "commonjs",
  "keywords": ["npm", "scripts", "pnpm", "cli", "interactive"],
  "author": "Michal",
  "license": "MIT",
  "dependencies": {
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m1981/ntlx.git"
  }
}
